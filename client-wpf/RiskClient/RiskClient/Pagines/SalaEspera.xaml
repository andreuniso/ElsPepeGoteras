<Page x:Class="RiskClient.Pagines.SalaEspera"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:uc="clr-namespace:RiskClient.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="SalaEspera">

    <Grid>
        <!-- Fons de pantalla -->
        <Grid.Background>
            <ImageBrush ImageSource="E:\M13 - PROJECTE\RiskClient\RiskClient\Imatges\sala_espera.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Margin="80,40,80,40"
                Background="#AAFFFFFF"
                CornerRadius="16"
                BorderBrush="#DDD"
                BorderThickness="1">
            <ListView x:Name="lvPlayers"
                      ItemsSource="{Binding Usuaris}"
                      Background="Transparent"
                      BorderThickness="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Width="950"
                      Height="680"
                      Padding="20"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <!-- Layout en forma de quadrícula 2x3 amb separació -->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" Rows="3" Margin="10"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <!-- Definim separació entre elements -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <!-- Cada element és un Usuari, passat al teu UserControl -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <uc:UCJugador usuaris="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Border>
    </Grid>
</Page>
